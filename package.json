{
  "name": "koa-template",
  "version": "1.0.0",
  "main": "app.ts",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "dev": "yarn nodemon app.ts",
    "build": "yarn tsc",
    "clean": "rm -rf ./**/*.js ./*.js",
    "clear": "rm -rf node_modules ./**/*.js ./*.js",
    "docker": "yarn && yarn build && yarn start",
    "docker:dev": "yarn && yarn dev"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/koa": "^2.11.6",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.22",
    "@types/sqlite3": "^3.1.8",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "koa": "^2.13.1",
    "koa-router": "^10.0.0",
    "sqlite3": "^5.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "*.js",
      "*.ts",
      "*.njk"
    ],
    "execMap": {
      "ts": "esno"
    }
  }
}
